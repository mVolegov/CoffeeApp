<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/cart_menu_element_name_label"
        android:text="Some menu element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <TextView
        android:id="@+id/cart_menu_element_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageButton
        android:id="@+id/eachCartItemAddQuantityBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="8dp"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <ImageButton
        android:id="@+id/eachCartItemMinusQuantityBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="8dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ic_baseline_remove_24" />

    <ImageButton
        android:id="@+id/cart_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/cart_menu_element_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</LinearLayout>